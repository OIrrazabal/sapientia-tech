<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>eLEARNING - Editar Curso</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="/assets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/assets/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/assets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/assets/css/style.css" rel="stylesheet">
</head>

<%- include('../../partials/navbar') %>

<div class="container mt-5">
    <h2 class="mb-4">Editar Cursos Existentes</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% cursos.forEach(curso => { %>
                <tr>
                    <td><%= curso.id %></td>
                    <td><%= curso.nombre %></td>
                    <td><%= curso.descripcion %></td>
                    <td>
                        <img src="/assets/cursos/<%= curso.id %>.jpg" 
                            data-id="<%= curso.id %>"
                            class="img-thumbnail curso-imagen" 
                            width="100"
                            onerror="handleCursoImageError(this)">
                    </td>
                    <td>
                        <a href="/admin/crear-curso/<%= curso.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/lib/wow/wow.min.js"></script>
    <script src="/assets/lib/easing/easing.min.js"></script>
    <script src="/assets/lib/waypoints/waypoints.min.js"></script>
    <script src="/assets/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/assets/js/main.js"></script>

    <!-- Script para manejar errores de imagen -->
    <script>
        function handleCursoImageError(img) {
            const cursoId = img.getAttribute('data-id');
            console.log(`Manejando error de imagen para curso ID: ${cursoId}`);
            
            // Intenta con diferentes extensiones
            const extensions = ['.png', '.jpeg', '.webp'];
            let currentExtensionIndex = 0;
            
            function tryNextExtension() {
                if (currentExtensionIndex < extensions.length) {
                    const newSrc = `/assets/cursos/${cursoId}${extensions[currentExtensionIndex]}`;
                    console.log(`Intentando cargar: ${newSrc}`);
                    img.src = newSrc;
                    currentExtensionIndex++;
                } else {
                    // Si todas las extensiones fallan, muestra la imagen por defecto
                    console.log(`Usando imagen por defecto para curso ID: ${cursoId}`);
                    img.src = '/assets/cursos/default.png';
                    img.onerror = null; // Evita bucles infinitos
                }
            }
            
            // Inicia el proceso con la primera extensión alternativa
            tryNextExtension();
            
            // Sigue intentando con las demás extensiones si sigue fallando
            img.onerror = function() {
                tryNextExtension();
            };
        }
        
        // Inicialización - Verificar todas las imágenes al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Verificando imágenes de cursos en la página');
            const images = document.querySelectorAll('.curso-imagen');
            images.forEach(img => {
                // Forzar recarga de imagen para asegurarnos que el navegador no use caché
                const timestamp = new Date().getTime();
                const originalSrc = img.src;
                img.src = originalSrc + '?t=' + timestamp;
                console.log(`Verificando imagen: ${img.src}`);
            });
        });
    </script>
</body>
</html>
