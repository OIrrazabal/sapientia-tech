<%- include ('../../partials/navbar') %>

<form action="/admin/cursos/guardar" method="POST" style="padding: 2em;">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h3>Nuevo Curso</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-lg-3">
                    <label class="form-label" for="titulo"> Título (*)</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título" required />
                </div>
                <div class="col-lg-3">
                    <label class="form-label" for="categoria_id"> Categoría (*)</label>
                    <select class="form-select" id="categoria_id" name="categoria_id" required>
                        <option value="" selected>Seleccionar...</option>
                        <% categorias.forEach(categoria => { %>
                            <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-4">
                    <label class="form-label" for="titulo"> Descripción (*)</label>
                    <textarea type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripción" required ></textarea>
                </div>
            </div>
            <% if (typeof error !== "undefined") { %>
                <p style="color: red"><%= error %></p>
            <% } %>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <a type="button" class="btn btn-danger me-2" href="/admin/cursos">Cancelar</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<%- include ('../../partials/footer') %>