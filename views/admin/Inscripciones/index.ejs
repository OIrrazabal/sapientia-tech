<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Inscripciones de Alumnos</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>

<%- include('../../partials/navbar', { usuario: usuario, appName: appName }) %>

<div class="container mt-5">
    <h2 class="text-center mb-4">Listado de Inscripciones</h2>
    <div class="text-end mb-3">
        <a href="/admin/inscripciones/nueva" class="btn btn-success">
            <i class="fa fa-plus me-1"></i> Nueva inscripción
        </a>
    </div>

    <% if (inscripciones && inscripciones.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>ID Alumno</th>
                        <th>Alumno</th>
                        <th>Curso</th>
                        <th>Fecha de Inscripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% inscripciones.forEach(ins => { %>
                        <tr>
                            <td><%= ins.alumno_id %></td>
                            <td class="text-center"><%= ins.alumno %></td>
                            <td class="text-center"><%= ins.curso %></td>
                            <td class="text-center"><%= new Date(ins.fecha_inscripcion).toLocaleString('es-ES') %></td>
                            <td class="text-center">
                                <a href="/admin/inscripciones/<%= ins.alumno_id %>/<%= ins.curso_id %>/eliminar"
                                    class="btn btn-sm btn-danger"
                                    onclick="return confirm('¿Estás seguro de que deseas desinscribir al alumno?');">
                                    Desinscribir
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <div class="text-center mt-4">
        <a href="/admin/home" class="btn btn-secondary py-3">
            <i class="fa fa-arrow-left me-2"></i>Volver al Inicio
        </a>
    </div>
    <% } else { %>
        <div class="alert alert-info text-center">
            No hay inscripciones registradas.
        </div>
    <% } %>
</div>

<%- include('../../partials/footer', { usuario: usuario, appName: appName }) %>

</body>
</html>
