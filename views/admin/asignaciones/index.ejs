<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>eLEARNING - Ver Asignaciones</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="/assets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <%- include('../../partials/navbar', { usuario: usuario, appName: appName }) %>

    <!-- Header Start -->
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Ver Asignaciones</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/admin/home">Inicio</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Asignaciones</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
<!-- asignaciones nuevas y listado de asignaciones-->

    <!-- Table Start -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card wow fadeInUp" data-wow-delay="0.1s">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Listado de Asignaciones</h2>

                        <!-- Botón CREAR nueva asignación -->
                        <div class="text-end mb-3">
                            <a href="/admin/asignaciones/nueva" class="btn btn-success">
                                <i class="fa fa-plus me-1"></i> Crear nueva asignación
                            </a>
                        </div>

                        <% if (asignaciones.length === 0) { %>
                            <div class="alert alert-warning text-center">No hay asignaciones registradas.</div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-bordered text-center align-middle">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>ID Curso</th>
                                            <th>Nombre Curso</th>
                                            <th>ID Profesor</th>
                                            <th>Nombre Profesor</th>
                                            <th>Publicado</th>
                                            <th>Ver Curso</th>
                                            <th>Eliminar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% asignaciones.forEach(asig => { %>
                                            <tr>
                                                <td><%= asig.curso_id %></td>
                                                <td><%= asig.titulo %></td>
                                                <td><%= asig.profesor_id %></td>
                                                <td><%= asig.profesor_nombre %></td>
                                                <td><%= asig.publicado ? 'Sí' : 'No' %></td>
                                                <td>
                                                    <a href="/auth/curso/<%= asig.curso_id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye me-1"></i> Ver
                                                    </a>
                                                </td>
                                                <td>
                                                    <!-- Aca elimina la asignacion-->
                                                    <form action="/admin/asignaciones/<%= asig.asignacion_id %>/eliminar" method="POST" onsubmit="return confirm('¿Está seguro de eliminar esta asignación?');">
                                                        <button class="btn btn-sm btn-danger" type="submit">
                                                            <i class="fa fa-trash"></i> Eliminar
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>

                        <div class="text-center mt-4">
                            <a href="/admin/home" class="btn btn-secondary py-3">
                                <i class="fa fa-arrow-left me-2"></i>Volver al Inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Table End -->

    <%- include('../../partials/footer') %>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>




