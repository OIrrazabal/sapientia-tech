<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title> Sapientia Tech Courses - Gestión de Rutas de Aprendizaje</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="/assets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap & Template Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <%- include('../../partials/navbar', { usuario: usuario, appName: appName }) %>

    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Gestión de Rutas de Aprendizaje</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/admin/home">Inicio</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Rutas de Aprendizaje</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

<div class="container">
    <div class="row mb-3">
        <div class="col-12">
            <a href="/admin/home" class="btn btn-outline-primary mb-3">
                <i class="fa fa-arrow-left me-2"></i> Volver al Inicio
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2>Rutas de Aprendizaje</h2>
            <a href="/admin/rutas/nueva" class="btn btn-primary btn-lg px-4 py-2 shadow-sm rounded-pill">
                <i class="fa fa-plus me-2"></i> Nueva Ruta
            </a>
        </div>
    </div>

    <% if (typeof mensaje !== 'undefined' && mensaje) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= mensaje %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Cursos</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(rutas) && rutas.length > 0) { %>
                    <% rutas.forEach(ruta => { %>
                    <tr>
                        <td><%= ruta.id %></td>
                        <td><%= ruta.nombre %></td>
                        <td><%= ruta.descripcion || '-' %></td>
                        <td><%= ruta.total_cursos %></td>
                        <td><%= new Date(ruta.fecha_creacion).toLocaleDateString() %></td>
                        <td>                            <div class="btn-group" role="group">
                                <a href="/admin/rutas/<%= ruta.id %>/editar" class="btn btn-outline-primary rounded-start">
                                    <i class="fa fa-edit"></i> Editar
                                </a>
                                <form action="/admin/rutas/<%= ruta.id %>/eliminar" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger rounded-end" 
                                            onclick="return confirm('¿Estás seguro de eliminar esta ruta? Esta acción no se puede deshacer.')">
                                        <i class="fa fa-trash"></i> Eliminar
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center">No hay rutas de aprendizaje registradas</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

    <%- include('../../partials/footer') %>

    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
