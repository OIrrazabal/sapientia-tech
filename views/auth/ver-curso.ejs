<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>eLEARNING - <%= curso.nombre %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

<!-- Favicon -->
<link href="/assets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap & Template Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar', { usuario: usuario, appName: appName }) %>


    <!-- Header Start -->
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown"><%= curso.nombre %></h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/auth/home">Inicio</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Ver Curso</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->

    <!-- Course Details Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="mb-4">
                        <h2 class="mb-3"><%= curso.nombre %></h2>
                        <p><%= curso.descripcion %></p>
                    </div>

                    <!-- Estado del curso -->
                    <div class="mb-4">
                        <div class="d-flex flex-wrap gap-2">
                            <% if (esProfesor) { %>
                                <span class="badge bg-primary">
                                    <i class="fa fa-user-tie me-2"></i>Eres profesor de este curso
                                </span>
                            <% } else if (estaInscrito) { %>
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle me-2"></i>Estás inscrito
                                </span>
                            <% } else if (!esProfesor && !estaInscrito && curso.publicado) { %>
                                <!-- Botón de inscripción -->
                                <form action="/auth/curso/<%= curso.id %>/inscribir" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fa fa-user-plus me-2"></i>Inscribirme al curso
                                    </button>
                                </form>
                            <% } %>

                            <% if (curso.publicado) { %>
                                <span class="badge bg-info">
                                    <i class="fa fa-globe me-2"></i>Curso publicado
                                </span>
                            <% } else { %>
                                <span class="badge bg-warning">
                                    <i class="fa fa-clock me-2"></i>Curso no publicado
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <!-- Secciones -->
                    <div class="mb-4">
                        <h3 class="mb-3">Secciones del Curso</h3>
                        <% if (secciones && secciones.length > 0) { %>
                            <div class="accordion" id="accordionSecciones">
                                <% secciones.forEach((seccion, index) => { %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" 
                                                    data-bs-toggle="collapse" 
                                                    data-bs-target="#seccion<%= index %>">
                                                <%= seccion.nombre %>
                                            </button>
                                        </h2>
                                        <div id="seccion<%= index %>" class="accordion-collapse collapse">
                                            <div class="accordion-body">
                                                <%= seccion.descripcion %>
                                                
                                                <% if (seccion.video_path) { %>
                                                    <div class="mt-3 video-container">
                                                        <h5 class="mb-2">Material multimedia:</h5>
                                                        <video width="100%" controls>
                                                            <source src="/auth/videos/<%= curso.id %>/<%= seccion.id %>/<%= seccion.video_path.split('/').pop() %>" type="video/mp4">
                                                            Tu navegador no soporta la reproducción de videos.
                                                        </video>
                                                    </div>
                                                <% } %>
                                                
                                                <!-- Agregar esto: Botón eliminar sección (solo visible para el profesor) -->
                                                <% if (esProfesor) { %>
                                                    <div class="mt-3 d-flex justify-content-end">
                                                        <form action="/auth/curso/<%= curso.id %>/seccion/<%= seccion.id %>/eliminar" method="POST"
                                                              onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta sección? Esta acción no se puede deshacer.')">
                                                            <button type="submit" class="btn btn-danger btn-sm">
                                                                <i class="fa fa-trash me-1"></i> Eliminar sección
                                                            </button>
                                                        </form>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>

                            <!-- Al final de la lista de secciones -->
                            <% if (esProfesor && secciones.length > 0) { %>
                              <div class="text-center mt-4">
                                <a href="/auth/cursos/<%= curso.id %>/secciones" class="btn btn-outline-primary">
                                  <i class="fa fa-plus-circle me-2"></i>Agregar Otra Sección
                                </a>
                              </div>
                            <% } %>

                            <!-- Agregar botón de publicar si soy profesor y el curso no está publicado -->
                            <% if (esProfesor && !curso.publicado) { %>
                                <div class="mt-4">
                                    <form action="/auth/curso/<%= curso.id %>/publicar" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fa fa-globe me-2"></i>Publicar Curso
                                        </button>
                                    </form>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle me-2"></i>Sin Secciones
                            </div>
                            <% if (esProfesor) { %>
                                <div class="mt-3 text-center">
                                    <a href="/auth/curso/<%= curso.id %>/secciones" class="btn btn-primary">
                                        <i class="fa fa-plus-circle me-2"></i>Crear Primera Sección
                                    </a>
                                </div>
                            <% } %>
                        <% } %>
                    </div>

                    <!-- Sección de valoraciones -->
                    <div class="mt-5 valoraciones-container">
                        <h3 class="mb-3">Valoraciones del curso</h3>
                        
                        <!-- Resumen de valoraciones -->
                        <% if (estadisticas && estadisticas.total > 0) { %>
                            <div class="valoracion-summary mb-4">
                                <div class="d-flex align-items-center">
                                    <div class="rating-big me-3">
                                        <% for (let i = 1; i <= 5; i++) { %>
                                            <i class="fas fa-star <%= i <= Math.round(estadisticas.promedio) ? 'active' : '' %>"></i>
                                        <% } %>
                                    </div>
                                    <div>
                                        <h4 class="mb-0"><%= parseFloat(estadisticas.promedio).toFixed(1) %>/5</h4>
                                        <p class="text-muted mb-0"><%= estadisticas.total %> valoraciones</p>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i> Este curso aún no tiene valoraciones.
                            </div>
                        <% } %>
                        
                        <!-- Formulario para valorar (solo visible para inscritos que no han valorado) -->
                        <% if (estaInscrito && !esProfesor && !yaValorado) { %>
                            <div class="card mb-4 valoracion-form">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-star me-2"></i>Deja tu valoración</h5>
                                </div>
                                <div class="card-body">
                                    <form action="/auth/curso/<%= curso.id %>/valorar" method="POST" id="valoracionForm">
                                        <div class="mb-3">
                                            <label class="form-label">¿Cómo calificarías este curso?</label>
                                            <div class="star-rating-input">
                                                <% for (let i = 5; i >= 1; i--) { %>
                                                    <input type="radio" id="star<%= i %>" name="estrellas" value="<%= i %>" required />
                                                    <label for="star<%= i %>" title="<%= i %> estrellas">
                                                        <i class="fas fa-star"></i>
                                                    </label>
                                                <% } %>
                                            </div>
                                            <div class="selected-rating mt-2 fw-bold">
                                                <span id="rating-value">Selecciona una valoración</span>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="comentario" class="form-label">Comparte detalles sobre tu experiencia en este curso</label>
                                            <textarea class="form-control" id="comentario" name="comentario" rows="4" 
                                                      minlength="5" maxlength="500" required 
                                                      placeholder="¿Qué te gustó? ¿Qué podría mejorar?"></textarea>
                                            <div class="form-text text-end"><span id="char-count">0</span>/500 caracteres</div>
                                        </div>
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-paper-plane me-2"></i>Enviar valoración
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        <% } else if (estaInscrito && yaValorado) { %>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i> Ya has valorado este curso. ¡Gracias por tu aporte!
                            </div>
                        <% } %>
                        
                        <!-- Listado de valoraciones existentes -->
                        <% if (valoraciones && valoraciones.length > 0) { %>
                            <div class="valoraciones-list mt-4">
                                <h4 class="mb-3">Opiniones de los estudiantes</h4>
                                
                                <% valoraciones.forEach(valoracion => { %>
                                    <div class="valoracion-item card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2">
                                                        <%= valoracion.alumno_nombre.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <h5 class="mb-0 fw-bold"><%= valoracion.alumno_nombre %></h5>
                                                </div>
                                                <small class="text-muted">
                                                    <%= new Date(valoracion.fecha_creacion).toLocaleDateString() %>
                                                </small>
                                            </div>
                                            <div class="rating-stars mb-2">
                                                <% for (let i = 1; i <= 5; i++) { %>
                                                    <i class="fas fa-star <%= i <= valoracion.estrellas ? 'active' : '' %>"></i>
                                                <% } %>
                                            </div>
                                            <p class="card-text"><%= valoracion.comentario %></p>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>

                    <!-- Botón volver -->
                    <div class="mt-4">
                        <a href="/auth/home" class="btn btn-primary">
                            <i class="fa fa-arrow-left me-2"></i>Volver al Inicio
                        </a>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-light p-4 mb-4">
                        <h4 class="mb-3">Detalles del Curso</h4>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-user-tie text-primary me-3"></i>
                            <span>Profesor: <%= curso.profesor_nombre || 'Sin asignar' %></span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-book text-primary me-3"></i>
                            <span><%= secciones.length %> secciones</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Course Details End -->

    <%- include('../partials/footer') %>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Manejo de selección de estrellas
            const ratingInputs = document.querySelectorAll('input[name="estrellas"]');
            const ratingValue = document.getElementById('rating-value');
            
            ratingInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const value = this.value;
                    ratingValue.textContent = `${value} estrella${value > 1 ? 's' : ''}`;
                });
            });
            
            // Contador de caracteres
            const comentarioInput = document.getElementById('comentario');
            const charCount = document.getElementById('char-count');
            
            if (comentarioInput && charCount) {
                comentarioInput.addEventListener('input', function() {
                    const currentLength = this.value.length;
                    charCount.textContent = currentLength;
                    
                    if (currentLength >= 450) {
                        charCount.style.color = '#dc3545'; // Rojo cuando se acerca al límite
                    } else {
                        charCount.style.color = ''; // Color por defecto
                    }
                });
            }
            
            // Validación del formulario
            const form = document.getElementById('valoracionForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const comentario = document.getElementById('comentario').value;
                    const estrellas = document.querySelector('input[name="estrellas"]:checked');
                    
                    if (!comentario || comentario.length < 5) {
                        e.preventDefault();
                        alert('Por favor, escribe un comentario de al menos 5 caracteres.');
                    }
                    
                    if (!estrellas) {
                        e.preventDefault();
                        alert('Por favor, selecciona una valoración de 1 a 5 estrellas.');
                    }
                });
            }
        });
    </script>
</body>
</html>