<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>eLEARNING - <%= curso.nombre %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

<!-- Favicon -->
<link href="/assets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap & Template Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbar', { usuario: usuario, appName: appName }) %>


    <!-- Header Start -->
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown"><%= curso.nombre %></h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/auth/home">Inicio</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Ver Curso</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->

    <!-- Course Details Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-8 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="mb-4">
                        <h2 class="mb-3"><%= curso.nombre %></h2>
                        <p><%= curso.descripcion %></p>
                    </div>

                    <!-- Estado del curso -->
                    <div class="mb-4">
                        <div class="d-flex flex-wrap gap-2">
                            <% if (esProfesor) { %>
                                <span class="badge bg-primary">
                                    <i class="fa fa-user-tie me-2"></i>Eres profesor de este curso
                                </span>
                            <% } else if (estaInscrito) { %>
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle me-2"></i>Estás inscrito
                                </span>
                            <% } else if (!esProfesor && !estaInscrito && curso.publicado && usuario.rol === 'estudiante') { %>
                                <!-- Botón de inscripción -->
                                <form action="/auth/curso/<%= curso.id %>/inscribir" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="fa fa-user-plus me-2"></i>Inscribirme al curso
                                    </button>
                                </form>
                            <% } %>

                            <% if (curso.publicado) { %>
                                <span class="badge bg-info">
                                    <i class="fa fa-globe me-2"></i>Curso publicado
                                </span>
                            <% } else { %>
                                <span class="badge bg-warning">
                                    <i class="fa fa-clock me-2"></i>Curso no publicado
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <!-- Secciones -->
                    <div class="mb-4">
                        <h3 class="mb-3">Secciones del Curso</h3>
                        <% if (secciones && secciones.length > 0) { %>
                            <div class="accordion" id="accordionSecciones">
                                <% secciones.forEach((seccion, index) => { %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" 
                                                    data-bs-toggle="collapse" 
                                                    data-bs-target="#seccion<%= index %>">
                                                <%= seccion.nombre %>
                                            </button>
                                        </h2>
                                        <div id="seccion<%= index %>" class="accordion-collapse collapse">
                                            <div class="accordion-body">
                                                <%= seccion.descripcion %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>

                            <!-- Agregar botón de publicar si soy profesor y el curso no está publicado -->
                            <% if (esProfesor && !curso.publicado) { %>
                                <div class="mt-4">
                                    <form action="/auth/curso/<%= curso.id %>/publicar" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fa fa-globe me-2"></i>Publicar Curso
                                        </button>
                                    </form>
                                </div>
                            <% } %>
                        <% } else { %>
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle me-2"></i>Sin Secciones
                            </div>
                        <% } %>
                    </div>

                    <!-- Botón volver -->
                    <div class="mt-4">
                        <a href="/auth/home" class="btn btn-primary">
                            <i class="fa fa-arrow-left me-2"></i>Volver al Inicio
                        </a>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-light p-4 mb-4">
                        <h4 class="mb-3">Detalles del Curso</h4>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-user-tie text-primary me-3"></i>
                            <span>Profesor: <%= curso.profesor_nombre || 'Sin asignar' %></span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-book text-primary me-3"></i>
                            <span><%= secciones.length %> secciones</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Course Details End -->

    <%- include('../partials/footer') %>

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>
</html>