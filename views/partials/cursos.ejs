<!-- Courses Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
                <h1 class="mb-5">Cursos Populares en Sapientia Tech Course</h1>
            </div>
            <div class="row g-4 justify-content-center">
                <% if (cursosPopulares && cursosPopulares.length > 0) { %>
                    <% cursosPopulares.forEach(function(curso, idx) { %>
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="<%= (0.1 + idx * 0.2).toFixed(1) %>s">
                            <div class="course-item bg-light">
                                <div class="position-relative overflow-hidden">
                                    <img class="img-fluid" src="/assets/img/course-<%= (idx % 3) + 1 %>.jpg" alt="">
                                    <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                        <a href="/public/curso/<%= curso.id %>" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Ver Curso</a>
                                        <a href="/auth/curso/<%= curso.id %>" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Inscribirse</a>
                                    </div>
                                </div>
                                <div class="text-center p-4 pb-0">
                                    <!-- Fijamos el precio aquí -->
                                    <h3 class="mb-0">$149.00</h3>
                                    <!-- Estrellas de calificación -->
                                    <div class="mb-2">
                                        <span class="text-warning">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </span>
                                        <!-- Cantidad de reseñas-->
                                        <small class="text-muted ms-1">(123)</small>
                                    </div>
                                    <div class="mb-3">
                                        <small class="fa fa-user text-primary"></small>
                                        <small><%= curso.inscriptos %> inscriptos</small>
                                    </div>
                                    <h5 class="mb-4"><%= curso.nombre %></h5>
                                </div>
                                <div class="d-flex border-top">
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p>No hay cursos populares disponibles.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Courses End -->