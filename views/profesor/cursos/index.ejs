<%- include ('../../partials/navbar') %>

<div class="row mb-3">
    <div class="col-lg-12">
        <div class="card" style="padding: 2em;">
            <div class="card-header">
                <h3>Mis Cursos</h3>
            </div>
            <div class="card-body">
                <table class="table table-bottom-border table-light align-middle mb-3">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Título</th>
                            <th>Categoría</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cursos.forEach(curso => { %>
                            <tr>
                                <td><%= curso.id %></td>
                                <td><%= curso.titulo %></td>
                                <td><%= curso.categoria %></td>
                                <td>
                                    <% if (curso.publicado === 1) { %>
                                        <span class="badge bg-success text-white">
                                            Publicado
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger text-white">
                                            Pendiente
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <a type="button" class="btn btn-sm btn-secondary" href="/profesor/cursos/ver/<%= curso.id %>">Ver</a>
                                    <% if (curso.publicado === 0) { %>
                                        <form action="/profesor/cursos/publicar/<%= curso.id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-warning">Publicar</button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 text-center">
        <a type="button" class="btn btn-primary me-2" href="/">Volver al Inicio</a>
    </div>
</div>

<%- include ('../../partials/footer') %>